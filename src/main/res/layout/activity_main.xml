<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="47dp"
            android:gravity="center"
            android:text="Thingworx"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:src="@drawable/connected"
            app:layout_constraintRight_toLeftOf="@+id/checkBoxConnected"
            android:layout_marginRight="34dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="47dp" />

        <CheckBox
            android:id="@+id/checkBoxConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:button="@drawable/custom_green_checkbox_selector"

            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="259dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="164dp"
            android:gravity="center"
            android:text="Sensor"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/MAC"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MAC"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_marginRight="14dp"
            android:layout_marginTop="164dp"
            android:gravity="center"
            android:onClick="BLEScanActivity"
            android:text="Search for Device"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/sensorCheckBox"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/sensorCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:button="@drawable/custom_green_checkbox_selector"

            android:gravity="center"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="164dp" />

        <TextView
            android:id="@+id/bottleID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="270dp"
            android:text=" Number"
            android:textColor="@color/Grey"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MAC"
            app:layout_constraintVertical_bias="0.804" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="horizontal" />


</android.support.constraint.ConstraintLayout>
