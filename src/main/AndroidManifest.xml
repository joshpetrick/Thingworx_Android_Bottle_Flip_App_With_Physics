<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.thingworx.sdk.android.bottleflip"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.thingworx.sdk.android.bottleflip.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.thingworx.sdk.android.activity.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.mbientlab.bletoolbox.examples.ScannerActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <service android:name="com.mbientlab.metawear.android.BtleService" />
    </application>

</manifest>
